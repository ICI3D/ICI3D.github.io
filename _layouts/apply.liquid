{% if site.takingapps == true %}
<!DOCTYPE HTML>
<html lang="en-US">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="refresh" content="2;url={{ site.applink }}">
        <script type="text/javascript">
            window.location.href = "{{ site.applink }}"
        </script>
        <title>Page Redirection</title>
    </head>
    <body>
        <!-- Note: don't tell people to `click` the link, just tell them that it is a link. -->
        If you are not redirected automatically, follow <a href='{{ site.applink }}'>this link</a>.
    </body>
</html>
{% else %}
<!DOCTYPE html>
<html lang="en" class="fullscreen">
{%include head.html%}
  <body>
	<!-- WRAPPER -->
	 <div class="wrapper">
     {%include navbar.html%}
     {%include clinicNavbar.html%}
     {%include header.html%}
     {% include alert alerttype=page.alerttype alertmsg=page.alertmsg %}
     <!-- PAGE CONTENT -->
 		<div class="page-content">
 			<div class="container">
        <h1><span style="color: #15378a">{{page.subtitle}}</span></h1>

        {{ content }}
       </div>
     </div>
     <!-- END PAGE CONTENT -->
         {% include footer.html %}
    </div>
    <!-- END WRAPPER -->
    <!-- JAVASCRIPTS -->
    {% include jsblock.html %}

  </body>
</html>
{% endif %}
